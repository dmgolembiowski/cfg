[Unit]
Description=Remote desktop service (VNC)
After=syslog.target network.target

[Service]
Type=simple
User={{ vncserver.user }}

ExecStartPre=/bin/sh -c '/usr/bin/vncserver -kill ":*" >/dev/null 2>&1 || true'
ExecStart=/usr/bin/vncserver -fg -localhost yes
ExecStop=/usr/bin/vncserver -kill ":*"

[Install]
WantedBy=multi-user.target
