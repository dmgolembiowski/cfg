#!/bin/sh

INT=eDP-1
EXT=DP-1

# Needed for some strange reason (race?):
xrandr >/dev/null

if [ "$(cat /sys/class/drm/card0/card0-$EXT/status)" = connected ]; then
	logger $(basename $0) on $EXT off $INT
	xrandr --output $INT --off --output $EXT --auto
else
	logger $(basename $0) off $EXT on $INT
	xrandr --output $INT --auto --output $EXT --off
fi
