[colors]
bg = #fff
fg = #24292e
fg_light = #6a737d
red = #d73a49
orange = #e36209
green = #22863a
blue = #005cc5

[bar/main]
width = 100%
height = 18
fixed-center = false

background = ${colors.bg}
foreground = ${colors.fg}

border-size = 4
border-color = ${colors.bg}

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = IBMPlexMono:size=10;2

enable-ipc = true

modules-left = xworkspaces
modules-center = task
modules-right = filesystem cpu memory temperature wlan eth pulseaudio backlight-acpi redshift battery date

tray-position = right
tray-padding = 2

cursor-click = pointer
cursor-scroll = ns-resize

[module/xworkspaces]
type = internal/xworkspaces
enable-scroll = false

label-active = " %name% "
label-occupied = " %name% "
label-urgent = " %name% "
label-empty = " %name% "

label-active-foreground = ${colors.red}

[module/task]
type = custom/script
tail = true

exec = ~/.local/bin/polybar-task
label = %output%

format-prefix = "TASKS "
format-prefix-foreground = ${colors.fg_light}

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /

format-mounted-prefix = "DISK "
format-mounted-prefix-foreground = ${colors.fg_light}
label-mounted = %percentage_used:02%%

[module/cpu]
type = internal/cpu
interval = 5

format-prefix = "CPU "
format-prefix-foreground = ${colors.fg_light}
label = %percentage:02%%

[module/memory]
type = internal/memory
interval = 5

format-prefix = "MEM "
format-prefix-foreground = ${colors.fg_light}
label = %percentage_used:02%%

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format-prefix = "TEMP "
format-prefix-foreground = ${colors.fg_light}
format-warn-prefix = "TEMP "
format-warn-prefix-foreground = ${colors.fg_light}
format-warn-foreground = ${colors.red}

[module/wlan]
type = internal/network
interface = wlp2s0

ramp-signal-0 = .....
ramp-signal-1 = ↑....
ramp-signal-2 = ↑↑...
ramp-signal-3 = ↑↑↑..
ramp-signal-4 = ↑↑↑↑.
ramp-signal-5 = ↑↑↑↑↑

ramp-signal-0-foreground = ${colors.red}
ramp-signal-1-foreground = ${colors.red}
ramp-signal-2-foreground = ${colors.orange}
ramp-signal-3-foreground = ${colors.orange}
ramp-signal-4-foreground = ${colors.green}
ramp-signal-5-foreground = ${colors.green}

format-connected-prefix = "WIFI "
format-connected-prefix-foreground = ${colors.fg_light}
format-disconnected-prefix = "WIFI "
format-disconnected-prefix-foreground = ${colors.fg_light}
format-connected = <label-connected> <ramp-signal>
label-connected = %essid%

label-disconnected = OFF
label-disconnected-foreground = ${colors.red}

[module/eth]
type = internal/network
interface = enp0s31f6

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "VOL "
format-volume-prefix-foreground = ${colors.fg_light}
format-muted-prefix = "VOL "
format-muted-prefix-foreground = ${colors.fg_light}

label-muted-foreground = ${colors.blue}
label-muted = MUT

[module/xbacklight]
type = internal/xbacklight

format-prefix = "BRI "
format-prefix-foreground = ${colors.fg_light}
format = <label>

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/redshift]
type = custom/script
interval = 5

exec = ~/.local/bin/polybar-redshift
label = %output%

format-prefix = "RED "
format-prefix-foreground = ${colors.fg_light}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

time-format = %H:%M

format-charging-prefix = "BAT "
format-charging-prefix-foreground = ${colors.fg_light}
format-discharging-prefix = "BAT "
format-discharging-prefix-foreground = ${colors.fg_light}
format-full-prefix = "BAT "
format-full-prefix-foreground = ${colors.fg_light}

label-charging = %percentage%%
label-discharging = %percentage%% %time%
label-discharging-foreground = ${colors.blue}
label-full = FULL

[module/date]
type = internal/date
interval = 1

format = <label>

date = "%Y-%m-%d"
date-alt = "%Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S

label = %date% %time%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
