[colors]
; gruvbox colors
bg = #282828
bg2 = #504945
fg = #d5c4a1
fg4 = #a89984
green = #b8bb26
red = #fb4934

[bar/main]
width = 100%
height = 18
fixed-center = false

background = ${colors.bg}
foreground = ${colors.fg}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = NotoSansRegular:size=10;2
font-1 = NotoColorEmoji:size=10:scale=10;2

modules-left = xworkspaces
modules-center = xwindow
modules-right = pacupdates filesystem cpu memory temperature wlan eth pulseaudio backlight-acpi battery date

tray-position = right
tray-padding = 2
;tray-background = #0063ff

cursor-click = pointer
cursor-scroll = ns-resize

[module/xworkspaces]
type = internal/xworkspaces
enable-scroll = false

label-active = " %name% "
label-occupied = " %name% "
label-urgent = " %name% "
label-empty = " %name% "

label-active-background = ${colors.bg2}
label-urgent-foreground = ${colors.red}

[module/xwindow]
type = internal/xwindow

label = %title:0:60:...%
label-empty = Emacs

[module/pacupdates]
type = custom/script
interval = 6000

exec = checkupdates 2> /dev/null | wc -l
label = 📦 %output%

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /

format-mounted = 💾 <label-mounted>
label-mounted = %percentage_used:02%%

[module/cpu]
type = internal/cpu
interval = 5

format-prefix = "🧠 "
label = %percentage:02%%

[module/memory]
type = internal/memory
interval = 5

label = %percentage_used:02%%
format-prefix = "🐏 "

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format-warn-underline = ${colors.red}

label = 🌡️ %temperature-c%
label-warn = 🌡️ %temperature-c%

[module/wlan]
type = internal/network
interface = wlp2s0

label-connected = 📡 %essid% %signal%

[module/eth]
type = internal/network
interface = enp0s31f6

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-muted = 🔇

ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

[module/xbacklight]
type = internal/xbacklight

format = ☀️ <label>

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC

time-format = %H:%M

label-charging = 🔌 %percentage%% %time%
label-discharging = 🔋 %percentage%% %time%
label-full = 🔌

[module/date]
type = internal/date
interval = 1

format = 🕓 <label>

date = " %Y-%m-%d"
date-alt = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S

label = %date% %time%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

