##
## Mailbox
##

# Local extended maildir setup:
set mbox_type=Maildir
set spoolfile="~/.maildir"
set folder="~/.maildir"
set mask=".*"

set record="+.Sent"
set postponed="+.Drafts"

mailboxes + `\
for file in ~/.maildir/.*; do \
  box=$(basename "$file"); \
  if [ ! "$box" = '.' -a ! "$box" = '..' -a ! "$box" = '.customflags' \
      -a ! "$box" = '.subscriptions' ]; then \
    echo -n "\"+$box\" "; \
  fi; \
done`

##
## Settings:
##

# User config:
set from="Eivind Uggedal <eu@eju.no>"

# Index:
set sort=threads
set strict_threads=yes
set index_format="%3C %Z %{%F %R} %-18.18n %s"

# Pager:
set pager_index_lines=6

# Sidebar:
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set sidebar_width = 24
set sidebar_divider_char = ' '
set mail_check_stats

# Compose:
set edit_headers=yes

# Disable ISO-8859-1 encoding:
set send_charset="us-ascii:utf-8"

# Header cache location:
set header_cache=~/.cache/mutt

##
## Keybindings
##

bind index,pager \Cp sidebar-prev
bind index,pager \Cn sidebar-next
bind index,pager \Co sidebar-open

macro index M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"
macro index a "<save-message>+.Archive<enter>y" "move a message to Archive"

##
## Colors
##

# Basic:
color status color238 color252
color indicator color254 color24

# Message body:
color quoted color5 default

# Sidebar:
color sidebar_highlight default color252
color sidebar_flagged red default
color sidebar_new green default
