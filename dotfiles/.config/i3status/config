# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = '#718c00'
        color_degraded = '#d75f00'
        color_bad = '#d7005f'

        interval = 5
}

order += "disk /"
order += "disk /var"
order += "disk /home"
order += "wireless _first_"
order += "battery all"
order += "load"
order += "volume master"
order += "backlight"
order += "apt_updates"
order += "tztime local"

disk "/" {
        format = "/ %percentage_used"
        low_threshold = 20
}

disk "/var" {
        format = "/var %percentage_used"
        low_threshold = 20
}

disk "/home" {
        format = "/home %percentage_used"
        low_threshold = 20
}

wireless _first_ {
        format_up = "W:%quality %essid"
        format_down = "W: down"
}

battery all {
        format = "%status %percentage %remaining"
        status_chr = "C:"
        status_bat = "B:"
        status_full = "F:"
        integer_battery_capacity = true
        hide_seconds = true
        threshold_type = percentage
        low_threshold = 10
}

load {
        format = "L: %1min"
}

volume master {
        device = pulseaudio
	format = "V: %volume"
	format_muted = "V: %%0"
}

apt_updates {
	format = "U: {apt}"
}

tztime local {
        format = "%Y-%m-%d %H:%M "
}
