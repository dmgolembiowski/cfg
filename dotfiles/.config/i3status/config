general {
	colors = true
	color_good = "#22863a"
	color_degraded = "#e36209"
	color_bad = "#d73a49"
	interval = 1
}

order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "tztime local"

disk "/" {
	format = "/ %avail"
}

wireless _first_ {
	format_up = "¥: %essid %quality"
	format_down = "¥: down"
}

ethernet _first_ {
	# if you use %speed, i3status requires root privileges
	format_up = "E: %ip %speed"
	format_down = ""
}

volume master {
	device = "pulse"
}

battery all {
	format = "%status %percentage %remaining"
	integer_battery_capacity = true
	hide_seconds = true
	threshold_type = "percentage"
	low_threshold = 20
}

tztime local {
	format = "%Y-%m-%d %H:%M "
}
