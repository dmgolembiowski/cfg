general {
	colors = true
	interval = 1
}

order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "tztime local"

disk "/" {
	format = "%avail"
}

wireless _first_ {
	format_up = "W: %essid %quality"
	format_down = "W: down"
}

ethernet _first_ {
	# if you use %speed, i3status requires root privileges
	format_up = "E: %ip %speed"
	format_down = ""
}

battery all {
	format = "%status %percentage %remaining"
	integer_battery_capacity = true
	hide_seconds = true
}

tztime local {
	format = "%Y-%m-%d %H:%M "
}
